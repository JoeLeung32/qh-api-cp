    <div class="col-12 col-md-6 py-1 d-flex flex-wrap gap-2 justify-content-md-end order-0 order-md-1">
        <div>
            <div class="btn btn-light">
                <i class="fa-solid fa-folder-plus"></i>
                <span class="ms-1">Add New Folder</span>
            </div>
        </div>
        <div>
            <div class="btn btn-light">
                <i class="fa-solid fa-file-circle-plus"></i>
                <span class="ms-1">Add New Assets</span>
            </div>
        </div>
        <div>
            <div class="btn btn-light">
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>
        </div>
